// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  RUNNER
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum Terrain {
  TRAIL
  ASPHALT
  MIXED
}

enum Level {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  role      Role     @default(RUNNER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  inscriptions Inscription[]
  comments     Comment[]
  posts        Post[]
  notifications Notification[]

  level        Level?
  photoUrl     String?
  preferences  Json?
  
  @@map("users_v2")
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  date        DateTime
  location    String
  distance    Float    // en km
  price       Float
  imageUrl    String?
  
  difficulty      Difficulty @default(BEGINNER)
  maxParticipants Int?
  elevation       Float?  // desnivel en metros
  terrainType     Terrain?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  inscriptions Inscription[]
  comments     Comment[]
  
  @@map("events_v2")
}

model Inscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  eventId   String   @db.ObjectId
  status    String   @default("CONFIRMED") // "CONFIRMED", "CANCELLED"
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
  @@map("inscriptions_v2")
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  createdAt DateTime @default(now())
  userId    String   @db.ObjectId
  eventId   String?  @db.ObjectId
  postId    String?  @db.ObjectId

  user  User   @relation(fields: [userId], references: [id])
  event Event? @relation(fields: [eventId], references: [id])
  post  Post?  @relation(fields: [postId], references: [id])
  
  @@map("comments_v2")
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
  userId    String   @db.ObjectId
  likes     Int      @default(0)

  user     User      @relation(fields: [userId], references: [id])
  comments Comment[]
  
  @@map("posts_v2")
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  type      String   // "SYSTEM", "EVENT", "SOCIAL"
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  
  @@map("notifications_v2")
}
